@model LoginViewModel
@{
    ViewData["Title"] = "Вход";
    Layout = "_LayoutBase";
}

<section id="form">
    <!--form-->
    <div class="container">
        <div class="row">
            <div class="col-sm-4 col-sm-offset-1">
                <div class="login-form">
                    <!--login form-->
                    <h2>Войти</h2>
                    <form method="post" asp-controller="Account" asp-action="Login" asp-antiforgery="true">
                        <input asp-for="UserName" placeholder="@nameof(Model.UserName)" />
                        <input asp-for="Password" placeholder="@nameof(Model.Password)" />
                        <span>
                            <input asp-for="RememberMe" class="checkbox">
                            Запомнить
                        </span>
                        <button type="submit" class="btn btn-default">Войти</button>
                    </form>
                </div><!--/login form-->
            </div>
        </div>
    </div>
</section><!--/form-->