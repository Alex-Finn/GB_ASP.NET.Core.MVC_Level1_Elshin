<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description" content="Учебный макет сайта для обучения на курсе GB. ASP.Net Core MVC. 1 уровень">
    <meta name="author" content="Elshin Alexey. 2019">
    <title>@ViewData["Title"]</title>
    <link href="~/css/bootstrap.min.css" rel="stylesheet">
    <link href="~/css/font-awesome.min.css" rel="stylesheet">

    <environment include="Development">
        <link href="~/css/back_site.css" rel="stylesheet" asp-append-version="true">
    </environment>
    <environment exclude="Development"> @*действуем наоборот и при разработке подключаем сгенереный файл стиля*@
        <link href="~/css/prettyPhoto.css" rel="stylesheet">
        <link href="~/css/price-range.css" rel="stylesheet">
        <link href="~/css/animate.css" rel="stylesheet">
        <link href="~/css/main.css" rel="stylesheet">
        <link href="~/css/responsive.css" rel="stylesheet">
    </environment>
    

    <!--[if lt IE 9]>
    <script src="js/html5shiv.js"></script>
    <script src="js/respond.min.js"></script>
    <![endif]-->
    @await RenderSectionAsync("Styles", false)

    <script src="~/jquery/jquery.min.js"></script>
</head><!--/head-->
<body>
    @await Html.PartialAsync("Partial/_Header")

    @RenderBody()

    @await Html.PartialAsync("Partial/_Footer")


    <script src="~/js/jquery.js"></script>
    <script src="~/js/bootstrap.min.js"></script>
    <script src="~/js/jquery.scrollUp.min.js"></script>
    <script src="~/js/price-range.js"></script>
    <script src="~/js/jquery.prettyPhoto.js"></script>

    <environment exclude="Development">
        <script src="~/js/main.js"></script>
    </environment>
    <environment include="Development">
        <script src="~/js/site.min.js"></script>
    </environment>
    @await RenderSectionAsync("Scripts", false)
</body>
</html>