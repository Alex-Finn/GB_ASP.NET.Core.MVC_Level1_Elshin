@model IEnumerable<WebStore.Models.EmployeeView>

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" charset="utf-8" />
    <title>Index</title>
</head>
<body>
    <section>
        <div>
            <h3>Сотрудники</h3>
            <table border="1">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>FirstName</th>
                        <th>SecondName</th>
                        <th>Patronymic</th>
                        <th>Age</th>
                        <th>Details</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.Id</td>
                            <td>@item.FirstName</td>
                            <td>@item.SecondName</td>
                            <td>@item.Patronymic</td>
                            <td>@item.Age</td>
                            <td>@Html.ActionLink("Детали","Details",new { id = item.Id })</td>
                        </tr>
                    }
                </tbody>
                
            </table>
        </div>
    </section>
</body>

</html>