@model IEnumerable<SectionViewModel>

<h2>Категории</h2>

<div class="panel-group category-products" id="accordian">
    <!--category-productsr-->

    @foreach (var section in Model)
    {
        if (section.ChildSections.Count > 0)
        {
            <div class="panel panel-default">
                <div class="panel-heading">
                    <h4 class="panel-title">
                        <a data-toggle="collapse" data-parent="#accordian" href="@(section.Name.ToLower())">
                            <span class="badge pull-right"><i class="fa fa-plus"></i></span>
                            @(section.Name)
                        </a>
                    </h4>
                </div>
                <div id="@(section.ParentSection.Name)" class="panel-collapse collapse">
                    <div class="panel-body">
                        <ul>
                            @foreach (var childSection in section.ChildSections)
                            {
                                <li><a href="@(childSection.Name.ToLower())">@(childSection.Name) </a></li>
                            }
                        </ul>
                    </div>
                </div>
            </div>
        }
        else
        {
            <div class="panel panel-default">
                <div class="panel-heading">
                    <h4 class="panel-title">@(section.Name)</h4>
                </div>
            </div>
        }
    }
</div><!--/category-products-->
